<!DOCTYPE html>
<html>
  <head>
    <title>EcoShare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if end_user_signed_in? %>
      <li>
        <%= link_to "logout", destroy_end_user_session_path, method: :delete %>
      </li>
      <li>
        <%= link_to "end_users", end_users_path %>
      </li>
      <li>
        <%= link_to "post_product", post_products_path %>
      </li>
      <li>
        <%= link_to "post_product_new", new_post_product_path %>
      </li>
    <% else %>
      <li>
        <%= link_to "signup", new_end_user_registration_path %>
      </li>
      <li>
        <%= link_to "login", new_end_user_session_path %>
      </li>

    <% end %>




    <%= yield %>
  </body>
</html>
