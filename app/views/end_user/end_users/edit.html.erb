<!--edit.html.erb-->
<div class="container my-5">
  <div class="row">
    <div class="col-md-6 col-lg-6 mx-auto text-color">
      <%= form_with model:@end_user ,url:end_user_path, method: :patch, local:true do |f| %>
      <div class="form-group">
        <%= attachment_image_tag @end_user, :profile_pic, class:"rounded-circle my-2 profile-pic" %>
      </div>
      <div class="form-group">
        <%= f.attachment_field :profile_pic, placeholder: "profile_pic my-2 edit-text" %>
      </div>
      <div class="form-group">
        <%= f.text_field :nickname, class: "my-2 edit-text" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "my-2 edit-text" %>
      </div>
      <div class="form-group">
        <%= f.text_area :self_introduction, placeholder:"自分の紹介文を書いてみましょう", class: "my-2 edit-text" %>
      </div>
      <div>
        <%= f.submit 'update', class: "btn btnBlueDark btnBigSize edit-btn" %>
      </div>
      <% end %>
    </div>
  </div>
</div>