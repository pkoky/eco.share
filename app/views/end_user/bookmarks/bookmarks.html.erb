<div class="container my-5">
  <div class="row">
    <div class="col-lg-10 mx-auto flex_box postProduct ">
      <% @bookmarks.each do |bookmark| %>
        <div class="card flex_item shadow" style="width: 13rem;">
          <%= link_to post_product_path(bookmark.post_product.id) do %>
            <% bookmark.post_product.post_images.first(1).each do |image| %>
              <%= attachment_image_tag image, :image, class: "card-img-top productImage" %>
            <% end %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= bookmark.post_product.productName %>
            </h5>
            <!--simple_format 改行が反映される-->
            <div class="line-clamp">
              <p class="card-text"><%= simple_format bookmark.post_product.message %></p>
            </div>
            <div id="bookmark_<%= bookmark.post_product.id %>">
              <div class="bookmark">
                <%= render "end_user/bookmarks/bookmarks", postProduct: bookmark.post_product %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

