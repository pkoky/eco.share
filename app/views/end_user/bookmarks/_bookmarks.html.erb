<!--_bookmarks.html.erb-->
<% if end_user_signed_in? %>
  <% unless postProduct.end_user_id == current_end_user.id %>
    <% if postProduct.bookmarked_by?(current_end_user) %>
      <%= link_to post_product_bookmarks_path(postProduct), method: :delete, remote: true do %>
        <div class="btn btnBookmarkDelete rounded-circle">
          <i class="far fa-bookmark"></i>
          <span class="bookmark-text">外す</span>
        </div>

      <% end %>
    <% else %>
      <%= link_to post_product_bookmarks_path(postProduct), method: :post, remote: true do %>
      <div class="btn btnBookmarkPost rounded-circle">
        <i class="fas fa-bookmark"></i>
      </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>