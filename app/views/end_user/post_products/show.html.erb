<div class="container my-5">
  <div class="row">
    <div class="col-md-8 col-lg-8">
      <% if @postProduct.end_user.id == current_end_user.id %>
        <span><%= link_to "edit", edit_post_product_path, class: "btn btn-success rounded-pill px4 ml-3" %></span>
      <% end %>
    </div>
  </div>









  <div class="row">
    <div class="col-md-8 col-lg-8">
       <div class="slider mt-3">
          <% @postProduct.post_images.each do |post| %>
            <%= attachment_image_tag post, :image, :fill, 1200, 800, format: "jpeg" %>
           <% end %>
        </div>
        <div class="slider-1">
          <% @postProduct.post_images.each do |post| %>
            <%= attachment_image_tag post, :image, :fill, 1200, 800, format: "jpeg" %>
           <% end %>
        </div>
      <table class="table table-bordered table-condensed mt-3">
        <tr>
          <td>
            <%= @postProduct.productName %>
          </td>
        </tr>
        <tr>
          <td>message</td>
          <td><%= @postProduct.message %></td>
        </tr>
        <tr>
          <td>howToGet</td>
          <td><%= @postProduct.howToGet %></td>
        </tr>
      </table>
    </div>
  </div>
</div>