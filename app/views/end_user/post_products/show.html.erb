<div class="container-fluid my-5">
  <div class="row">
    <div class="col">

      <div class="row">
        <div class="col-md-2 col-lg-2"></div>
        <div class="col-md-2 col-lg-2 text-right">
          <%= attachment_image_tag @postProduct.end_user, :profile_pic, :fill, 60, 60, class:"rounded-circle" %>
        </div>
        <div class="col-md-2 col-lg-2 pt-3">
          <%= @postProduct.end_user.nickname %>
        </div>
      </div>

      <div class="row mt-5 mb-3">
        <div class="col-md-3 col-lg-3"></div>
        <div class="col-md-6 col-lg-6">
          <h5>
            <%= @postProduct.productName %>
          </h5>
          <div id="bookmark_<%= @postProduct.id %>">
            <div class="bookmark">
              <%= render "end_user/bookmarks/bookmarks", postProduct: @postProduct %>
            </div>
          </div>
          <div class="mt-3">
            <%= simple_format @postProduct.message %>
          </div>
          <% if @postProduct.howToGet.present?%>
            <div class="mt-3">place</div>
            <div><%= simple_format @postProduct.howToGet %></div>
          <% end %>
          <% if @postProduct.shopName.present? %>
            <div>shopname</div>
            <div><%= simple_format@postProduct.shopName %></div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 mx-auto">
          <div class="slider shadow mt-3">
            <% @postProduct.post_images.each do |post| %>
              <%= attachment_image_tag post, :image, :fill, 1500, 1000, format: "jpeg" %>
             <% end %>
          </div>
          <div class="slider-1 my-3">
            <% @postProduct.post_images.each do |post| %>
              <%= attachment_image_tag post, :image, :fill, 1200, 800, format: "jpeg" %>
             <% end %>
          </div>
        </div>
      </div>

      <div class="row my-5">
        <div class="col-md-4 col-lg-4"></div>
        <div class="col-md-2 col-lg-2 ml-5">
          <% if @postProduct.end_user.id == current_end_user.id %>
            <%= render "end_user/post_products/btn", postProduct: @postProduct %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>