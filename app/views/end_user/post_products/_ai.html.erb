<% if postProduct.score.present? %>
  <% if postProduct.score > 0.6 %>
    <i class="far fa-grin-hearts colorTextBase"></i>
  <% elsif postProduct.score > 0.1 %>
    <i class="far fa-smile-wink colorTextBase"></i>
  <% elsif postProduct.score > -0.5 %>
    <i class="far fa-angry colorTextBase"></i>
  <% else %>
    <i class="far fa-sad-tear colorTextBase"></i>
  <% end %>
<% end %>