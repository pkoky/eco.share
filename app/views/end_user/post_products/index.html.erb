<div class="container-fluid my-5">
  <div class="row postProducts_image">
      <div class="postProducts_image_content"></div>
  </div>
  <div class="row my-5">
    <div class="col-lg-10 mx-auto flex_box postProduct ">
    <% @postProducts.order(updated_at: :desc).each do |postProduct| %>
      <div class="card flex_item shadow ml-5 my-5" style="width: 17rem;">
        <%= link_to post_product_path(postProduct.id),data: {"turbolinks" => false} do %>
          <% postProduct.post_images.first(1).each do |image| %>
            <%= attachment_image_tag image, :image, class:"card-img-top productImage";%>
          <% end %>
        <% end %>
        <div class="card-body">
          <div id="bookmark_<%= postProduct.id %>">
            <div class="bookmark">
              <%= render "end_user/bookmarks/bookmarks", postProduct: postProduct %>
            </div>
          </div>
          <h5 class="card-title ml-3 mt-3">
            <%= postProduct.productName %>
          </h5>
          <!--simple_format 改行が反映される-->
          <div class="line-clamp  ml-3 mt-3">
            <p class="card-text"><%= simple_format postProduct.message %></p>
          </div>

          <div class="ml-3 mt-3 text-right">
            <%= postProduct.updated_at %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5 mx-auto text-center">
      <%= paginate @postProducts %>
    </div>
  </div>
</div>